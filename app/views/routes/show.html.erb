<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @route.title %>
  <% if @route.trains.empty? %>
  <p>No trains</p>
<% else %>
  <table>
    <thead>
    <th>Trains</th>
    <th colspan="3"></th>
    </thead>
    <tbody>
    <% @route.trains.each do |train| %>
      <tr>
        <td><%= "#{train.number}" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
<% if @route.railway_stations.empty? %>
  <p>No stations</p>
<% else %>
  <table>
    <thead>
    <th>Stations</th>
    <th colspan="3"></th>
    </thead>
    <tbody>
    <% @route.railway_stations.each_with_index do |railway_station, index| %>
      <tr>
        <td><%= "#{index+1}. #{railway_station.title}" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
</p>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
