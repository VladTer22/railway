<%= form_with(model: [:admin, :train, carriage]) do |f| %>
  <%= render 'common/error_html', resource: @carriage %>

  <div class="field">
    <%= f.label :number %>
    <%= f.number_field :number  %>
  </div>

  <div class="field">
    <%= f.label :train %>
    <%= f.collection_select :train_id, Train.all, :id, :number %>
  </div>

  <div class="field choose">
    <%= f.label :type %><br>
    <%= f.select :type, Carriage::TYPES, selected: @carriage.type || 'EconomyCarriage' %>
  </div>

  <div class="field top_seats seats">
    <%= f.label :up_seats %><br>
    <%= f.number_field :up_seats, value: 0 %>
  </div>

  <div class="field bottom_seats seats">
    <%= f.label :down_seats %><br>
    <%= f.number_field :down_seats, value: 0 %>
  </div>

  <div class="field side_top_seats seats">
    <%= f.label :side_seats_top %><br>
    <%= f.number_field :side_seats_top, value: 0 %>
  </div>

  <div class="field side_bottom_seats seats">
    <%= f.label :side_seats_bottom %><br>
    <%= f.number_field :side_seats_bottom, value: 0 %>
  </div>

  <div class="field sitting_seats seats">
    <%= f.label :sitting_seats %><br>
    <%= f.number_field :sitting_seats, value: 0 %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit', action: @carriage.new_record? ? 'Создать' : 'Изменить') %>
  </div>
<% end %>
