<tr>
  <td><%= carriage.type %></td>
  <td><%= carriage.number %></td>
  <td><%= "#{carriage.occupied_top}/#{carriage.up_seats}"%></td>
  <td><%= "#{carriage.occupied_bottom}/#{carriage.down_seats}" %></td>
  <td><%= "#{carriage.occupied_side_top}/#{carriage.side_seats_top}" %></td>
  <td><%= "#{carriage.occupied_side_bottom}/#{carriage.side_seats_bottom}" %></td>
  <td><%= "#{carriage.occupied_sitting}/#{carriage.sitting_seats}" %></td>
  <td><%= carriage.trains_ids.number || "0" %></td>
  <td><%= link_to 'Show', admin_carriage_path(carriage) %></td>
  <td><%= link_to 'Edit', edit_admin_carriage_path(carriage: carriage) %></td>
  <td><%= link_to 'Destroy', admin_carriage_path(carriage), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
